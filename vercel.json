{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/(boats|services|contact|boats_detail|test-navigation)", "dest": "/dist/$1.html" },
    { "src": "/(.*\\.(?:html|js|css|svg|png|jpg|jpeg|gif|webp|ico|json|map))", "dest": "/dist/$1" },
    { "src": "/", "dest": "/dist/index.html" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ],
  
  "env": {
    "NODE_ENV": "production"
  }
}


